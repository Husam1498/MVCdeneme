@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}    
<div class="row">
    <div class="col-4 offset-4">
       <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"] </h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
       <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger small"> </div>
            <div class="form-group">
                <label asp-for="Fullname" class="form-label">Fullname <span class="badge bg-danger ms-2">Required</span></label>
                <input asp-for="Fullname" class="form-control" placeholder="john" />
                <span asp-validation-for="Fullname" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username" class="form-label">Username <span class="badge bg-danger ms-2">Required</span></label>
                <input asp-for="Username" class="form-control" placeholder="john" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password <span class="badge bg-danger ms-2">Required</span></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="P@ssword" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword" class="form-label">RePassword <span class="badge bg-danger ms-2">Required</span></label>
                <input type="password" asp-for="RePassword" class="form-control" placeholder="P@ssword" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mt-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-paper-plane me-2"></i>Register</button>
            </div>
       </form>
       
    </div>
</div>