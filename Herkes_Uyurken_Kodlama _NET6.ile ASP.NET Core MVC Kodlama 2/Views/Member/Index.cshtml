@{
    ViewData["Title"] = "Member";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalAdd"
           data-ajax="true" data-ajax-method="Get" data-ajax-url="/Member/AddNewUserPartial" data-ajax-update="#modalAddContent"><i class="fa fa-plus me-2"></i> Create User</a>

        <a id="reflesh" data-ajax="true" data-ajax-method="Get" data-ajax-url="/Member/MemberListPartial" data-ajax-update="#panel" 
        class="btn btn-secondary btn-sm"><i class="fa fa-sync-alt me-2"></i> Reflesh</a>

    </div>
</div>

<div class="row">
    <div class="col">
        <div id="panel">

        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalAdd" tabindex="-1" aria-hidden="true">
    <div id="modalAddContent" class="modal-dialog">
       
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalEdit" tabindex="-1" aria-hidden="true">
    <div id="modalEditContent" class="modal-dialog">
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>

        $(function () {
            reflesh.click();
        });
    </script>
}
