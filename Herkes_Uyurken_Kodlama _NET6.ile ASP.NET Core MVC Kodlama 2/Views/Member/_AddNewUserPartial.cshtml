@model CreateUserModel


<div class="modal-content">
    <div class="modal-header">
        <h1 class="modal-title fs-5">Create New User</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">

        <form id="frmAddNewUser" asp-action="AddNewUser" method="post" data-ajax="true" 
             data-ajax-method="post" data-ajax-update="#modalAddContent">

            <div asp-validation-summary="ModelOnly" class="text-danger small"> </div>
            <div class="form-group">
                <label asp-for="Fullname" class="form-label">Fullname <span class="badge bg-danger ms-2">Required</span></label>
                <input asp-for="Fullname" class="form-control" placeholder="john" />
                <span asp-validation-for="Fullname" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username" class="form-label">Username <span class="badge bg-danger ms-2">Required</span></label>
                <input asp-for="Username" class="form-control" placeholder="john" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password <span class="badge bg-danger ms-2">Required</span></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="P@ssword" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword" class="form-label">RePassword <span class="badge bg-danger ms-2">Required</span></label>
                <input type="password" asp-for="RePassword" class="form-control" placeholder="P@ssword" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="form-label">Role </label>

                <select asp-for="Role" class="form-select">
                    <option value="">Please select</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked">
                    <label class="form-check-label" asp-for="Locked">
                        Locked
                    </label>
                </div>
            </div>

            
        </form>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal"><i class="fa fa-close me-2"></i>Close</button>
        <button type="submit" form="frmAddNewUser" class="btn btn-primary btn-sm"><i class="fa fa-save me-2"></i>Save</button>
    </div>
</div>

@if (string.IsNullOrEmpty(Model.Done)== false)
{
    <script>
        $("#modalAdd").modal("hide");
        toastr.success('@Model.Done',"Added")
        reflesh.click();
    </script>
}





